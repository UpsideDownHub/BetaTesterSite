                                    $.ajax({
                                        url: '@Url.Action("OpenArchive", "PhaseCreation")',
                                        type: 'POST',
                                        data: { id: data.id },
                                        traditional: true,
                                        dataType: 'json',
				                        success: function (data) {
                                            $('#Archive').val("");
					                        if (data == false) {
                                                $('#alertErrorAttachment').hide();
					                        }
					                        else {
                                                LoadArchive(data);
                                                $('#OpenArchiveModal').modal('hide');
					                        }
				                        }
			                        });
                                }
                            </script>
